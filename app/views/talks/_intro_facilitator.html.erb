      <span class="material-icons">arrow_back_ios</span>
      <p>Edit</p>
      <p></p>
    </div>
  <% end %>

  <div class="flex flex-row justify-between gap-8">
    <div data-controller="clipboard" data-action="click->clipboard#copy click->clipboard#copiedFromButton" class="transition duration-200 ease-in-out transform hover:bg-gray-200 active:bg-gray-400 md:py-4 lg:py-0 bg-white border-4 border-solid border-sky-800 tooltip cursor-pointer">
      <p data-clipboard-target="copiedButtonElement" class="px-8 text-sky-800 md:text-6xl lg:text-xl font-medium py-2 text-center">Invite link</p>
    </div>

    <%= form_with model: talk, method: :patch, data: { turbo: false }, class: "flex flex-row" do |form| %>
      <%= form.hidden_field :state, :value => 2 %>
      <%= button_tag "Start session", class: "transition duration-200 ease-in-out transform hover:bg-sky-900 active:bg-sky-800 bg-sky-700 cursor-pointer text-white w-full" do %>
            <p class="text-xl font-medium py-2 text-center uppercase px-16">Start session</p>
      <% end %>
    <% end %>

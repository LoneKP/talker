<div id="<%= dom_id talk %>" class="bg-sky-800 text-white p-2">
  <p>
    <strong>Host:</strong>
    <%= talk.host %>
  </p>

  <div>
    <p>Topics created:</p>
    <span id="topics_count"><%= talk.topics.count %></span>
  </div>

  <p>
    <strong>Duration:</strong>
    <%= talk.duration %>
  </p>

  <%= link_to "Start voting", talk_votes_path(talk), data: { turbolinks: false } %>
</div>

<div data-controller="facilitator" id=<%= dom_id(talk) %>>
  <div class="flex flex-row justify-between gap-12 my-8">
    <div class="w-full" >
        <% case talk.state %>
          <% when 1 %>
          <%= render "talks/title", talk: talk, text: talk.theme %>
          <% when 2 %>
          <%= render "talks/title", talk: talk, text: "Come up with some topics for the talk" %>
          <% when 3 %>
          <%= render "talks/title", talk: talk, text: "Vote on the most important topics" %>
          <% when 4 %>
          <%= render "talks/title", talk: talk, text: "Here's a topic to discuss" %>
          <% when  5 %>
          <%= render "talks/title", talk: talk, text: "Here's a recap of what you did" %>
        <% end %>
      <div class="mt-4">
      <% case talk.state %>
        <% when 1 %>
        <div data-facilitator-target="Facilitator" class="hidden">
          <%= render "talks/intro_facilitator", talk: talk, participants: participants %>
        </div>
        <div data-facilitator-target="Participant" class="hidden">
          <%= render "talks/intro_participant", talk: talk %>
        </div>
        <% when 2 %>
          <%= render "topics/new", talk: talk %>
        <% when 3 %>  
          <%#= render "votes/show" %>
        <% when 5 %>  
          <%= render "talks/recap", talk: talk %>
      <% end %>
      </div>
      <%= render "talks/topics", talk: talk, topics: topics %>
    </div>

    <div>
      <%= render "talks/talk", talk: talk %>
    </div>
  </div>
</div>


<%= form_with model: talk, method: :patch do |form| %>
  <%= form.hidden_field :state, :value => state %>
  <%= button_tag class: "flex justify-center items-center transition duration-200 ease-in-out transform hover:bg-sky-800 active:bg-sky-900 bg-sky-700 cursor-pointer text-white w-full" do %>
      <p class="uppercase text-lg font-medium py-2 px-4 text-center"><%= text %></p>
  <% end %>
<% end %>